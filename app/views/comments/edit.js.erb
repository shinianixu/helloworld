$("#<%= dom_id(@comment) %> .edit-comment-hide").hide();
$("#<%= dom_id(@comment) %> .form-content").remove();

$("<%= j render('form') %>").appendTo("#<%= dom_id(@comment) %> .form-section")

$("#<%= dom_id(@comment) %> .comment-cancel-btn").click(function( event ) {
  event.preventDefault();
  $("#<%= dom_id(@comment) %> .form-content").remove();
  $("#<%= dom_id(@comment) %> .edit-comment-hide").show();
});
